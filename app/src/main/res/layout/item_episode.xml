<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="episodeNumber"
            type="int" />

        <variable
            name="episodeTitle"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/list_item_padding">

        <TextView
            android:id="@+id/text_episode_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minWidth="48sp"
            android:text="@{String.valueOf(episodeNumber)}" />

        <TextView
            android:id="@+id/text_episode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_content_margin"
            android:gravity="center_vertical"
            android:text="@{episodeTitle}"
            android:textColor="?android:textColorPrimary" />
    </LinearLayout>
</layout>