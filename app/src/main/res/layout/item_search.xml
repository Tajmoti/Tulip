<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:drawablePadding="@dimen/list_item_icon_padding"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/list_item_padding">

    <TextView
        android:id="@+id/search_result_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="@dimen/list_item_icon_padding"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="?android:textColorPrimary" />

    <TextView
        android:id="@+id/search_result_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_content_margin"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:textAllCaps="true"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/image_language_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/item_content_margin" />
</LinearLayout>