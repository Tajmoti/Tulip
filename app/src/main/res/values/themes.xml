<resources>
    <!-- Base application theme. -->
    <style name="Theme.Tulip" parent="Theme.MaterialComponents">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.Tulip.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Tulip.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Tulip.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTextButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="FullscreenImageButtonLarge" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="FullscreenText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FullscreenIcon">
        <item name="android:scaleType">fitCenter</item>
        <item name="drawableTint">@color/white</item>
    </style>

    <style name="FullscreenImageButtonSmall">
        <item name="android:layout_width">@dimen/fullscreen_button_size</item>
        <item name="android:layout_height">@dimen/fullscreen_button_size</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="LibraryItemButton">
        <item name="android:layout_width">@dimen/fullscreen_button_size</item>
        <item name="android:layout_height">@dimen/fullscreen_button_size</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ErrorScreenTextPrimary">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ErrorScreenTextSecondary">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:alpha">0.66</item>
    </style>
</resources>